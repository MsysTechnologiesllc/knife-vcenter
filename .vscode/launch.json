{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Local File",
      "type": "Ruby",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "showDebuggerOutput": true,
      "useBundler": true,
      "pathToRDebugIDE": "c:\\Users\\russells\\tools\\rubies\\ruby-2.3.3\\bin\\rdebug-ide.bat",
      "pathToBundler": "c:\\Users\\russells\\tools\\rubies\\ruby-2.3.3\\bin\\bundler.bat",
      "program": "c:\\Users\\russells\\tools\\rubies\\ruby-2.3.3\\bin\\bundle.bat exec knife vcenter vm list --vcenter-host 172.16.20.2 --vcenter-username administrator@vsphere.local --vcenter-password Good4bye! --vcenter-disable-ssl-verify"
    },
    {
      "name": "Listen for rdebug-ide",
      "type": "Ruby",
      "request": "attach",
      "cwd": "${workspaceRoot}",
      "remoteHost": "127.0.0.1",
      "remotePort": "1234",
      "remoteWorkspaceRoot": "${workspaceRoot}"
    },
    {
      "name": "Rails server",
      "type": "Ruby",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/bin/rails",
      "args": [
        "server"
      ]
    },
    {
      "name": "RSpec - all",
      "type": "Ruby",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/bin/rspec",
      "args": [
        "-I",
        "${workspaceRoot}"
      ]
    },
    {
      "name": "RSpec - active spec file only",
      "type": "Ruby",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/bin/rspec",
      "args": [
        "-I",
        "${workspaceRoot}",
        "${file}"
      ]
    },
    {
      "name": "Cucumber",
      "type": "Ruby",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/bin/cucumber"
    }
  ]
}